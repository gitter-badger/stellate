%nav.navbar.navbar-default.navbar-fixed-top{role: "navigation", "data-spy" => "affix", "data-offset-top" => "60"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => "#navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: "/"} Stellate
    .collapse.navbar-collapse#navbar-collapse
      - if user_signed_in?
        = render "header/signed_in"
      - else
        %ul.nav.navbar-nav.navbar-right
          = render "header/login"
          %li.visible-xs
            %a{href: new_user_session_path}= t('voc.sign_in')
          %li.visible-xs
            %a{href: new_user_registration_path}= t('voc.sign_up')
